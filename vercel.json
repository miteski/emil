{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "VIRUSTOTAL_API_KEY": "VIRUSTOTAL_API_KEY",
    "MYSQL_DATABASE": "MYSQL_DATABASE",
    "MYSQL_PASSWORD": "MYSQL_PASSWORD",
    "MYSQL_USER": "MYSQL_USER",
    "MYSQL_HOST": "MYSQL_HOST"
  }
}
